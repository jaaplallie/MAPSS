package Main;

import java.awt.EventQueue;

import javax.swing.DefaultListModel;
import javax.swing.JFrame;
import Backend.AgentEnvironmentCreator;
import Backend.Scenario;
import Gui.MainWindow;

public class main{
	private JFrame frame;
	public static DefaultListModel<Scenario> scenarioListModel = new DefaultListModel<Scenario>();
	
	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		System.out.println("Multi-Agent Production System Simulator (MAPSS) started.");
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					AgentEnvironmentCreator aec = new AgentEnvironmentCreator();
					MainWindow window = new MainWindow(scenarioListModel);
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}
}
