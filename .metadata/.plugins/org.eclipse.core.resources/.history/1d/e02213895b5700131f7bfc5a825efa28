package GraphicalGridBuilder;

public class GraphicalGridForwardSlashTransport extends GraphicalGridObject {

	GraphicalGridEquiplet eq1, eq2;
	
	public GraphicalGridForwardSlashTransport(){
		textualIcon = "\\";
		this.setImageIcon("img/grid_icons/forwardslash.png");
	}
	
	public GraphicalGridEquiplet getEq1() {
		return eq1;
	}

	public void setEq1(GraphicalGridEquiplet eq1) {
		this.eq1 = eq1;
	}

	public GraphicalGridEquiplet getEq2() {
		return eq2;
	}

	public void setEq2(GraphicalGridEquiplet eq2) {
		this.eq2 = eq2;
	}
	
	@Override
	public boolean checkConnected(String direction, GraphicalGridObject target) {
		Boolean returnVal = false;
		
		if(direction.equals("NW") || direction.equals("SE")){
			if(
				(target instanceof GraphicalGridCrossedTransport && (target.getTextualIcon().equals("X") || target.getTextualIcon().equals("x")))||
				(target instanceof GraphicalGridForwardSlashTransport)||
				(target instanceof GraphicalGridEquiplet)
				
			){
				returnVal = true;
			}
		}
		
		return returnVal;
	}
}
