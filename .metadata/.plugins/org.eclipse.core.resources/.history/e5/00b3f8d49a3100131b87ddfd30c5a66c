package Backend;

import org.jfree.chart.*;
import org.jfree.data.category.CategoryDataset;
import org.jfree.data.category.DefaultCategoryDataset;
import org.jfree.data.general.*;
import org.jfree.data.xy.DefaultXYDataset;
import Objects.Grid;

public class graphicDraw {

	DefaultPieDataset data = new DefaultPieDataset();
	DefaultCategoryDataset data2 = new DefaultCategoryDataset();
	JFreeChart chart;
	JFreeChart chart2;
	ChartFrame frame = new ChartFrame("Test", chart);
	ChartFrame frame2 = new ChartFrame("Test", chart2);
	Grid grid = new Grid();
	
	public graphicDraw() {
	}
	
	
	public void drawGraphic(){
		// create a dataset...
		DefaultPieDataset data = new DefaultPieDataset();
		DefaultCategoryDataset data2 = new DefaultCategoryDataset();
		
		data.setValue("Category 1", 250);
		data.setValue("Category 2", 500);
		data.setValue("Category 3", 310);
		data2.addValue(9.0, "p1", "Category 1");
		data2.addValue(9.0, "p2", "Category 2");
		data2.addValue(9.0, "p3", "Category 3");
		
		// create a chart...
		JFreeChart chart = ChartFactory.createPieChart(
		"Sample Pie Chart",
		data,
		true, // legend?
		true, // tooltips?
		false // URLs?
		);
		
		JFreeChart chart2 = ChartFactory.createBarChart3D(
			"TEST", 
			"time", 
			"Value", 
			data2
		);
		
		// create and display a frame...
		frame = new ChartFrame("First", chart);
		frame.pack();
		frame.setVisible(true);
		
		frame2 = new ChartFrame("second", chart2);
		frame2.pack();
		frame2.setVisible(true);
	}
	
}
